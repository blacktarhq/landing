---
import { Star, Github } from "@lucide/astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

const currentYear = new Date().getFullYear();
---

<BaseLayout title="Open Source - BLACKTAR ENGINEERING WORKS">
  <div class="min-h-screen">
    <header class="border-b-2 border-black px-4 py-3 md:px-8 md:py-6">
      <a href="/" class="inline-block transition-opacity hover:opacity-70">
        <div class="flex items-center gap-2">
          <img src="/logo.svg" alt="BlackTar" class="h-14 w-auto md:h-20" />
          <div class="text-sm leading-tight font-bold md:text-base">
            BLACKTAR<br />
            ENGINEERING<br />
            WORKS
          </div>
        </div>
      </a>
    </header>

    <section class="border-b-4 border-black p-8 md:p-16">
      <div class="mx-auto max-w-6xl">
        <h1
          class="mb-6 border-l-8 border-black pl-6 text-4xl font-bold md:text-6xl"
        >
          OPEN SOURCE CONTRIBUTIONS
        </h1>
        <p
          class="border-l-4 border-black pl-6 text-lg leading-relaxed md:text-xl"
        >
          GOOD SOFTWARE SHOULD BE FREE. GREAT SOFTWARE SHOULD BE OPEN. WE BUILD
          TOOLS WE WISH EXISTED, THEN SHARE THEM WITH THE WORLD.
        </p>
      </div>
    </section>

    <section class="p-8 md:p-16">
      <div class="mx-auto max-w-6xl space-y-12">
        {
          [
            {
              name: "CLI TOOLKIT",
              repo: "GITHUB.COM/BLACKTARENGINEERING/CLI-TOOLKIT",
              desc: "Stop fighting with argument parsers. Beautiful CLIs in minutes, not days. Colorized output, progress bars, interactive prompts. TypeScript-native and battle-tested by thousands.",
              tech: "TYPESCRIPT / NODE.JS",
              stars: "2.5K",
              features: [
                "Intuitive API for building command-line applications",
                "Built-in support for colorized output and formatting",
                "Interactive prompts with validation",
                "Progress bars and spinners",
                "Automatic help generation",
              ],
            },
            {
              name: "RUST WEB FRAMEWORK",
              repo: "GITHUB.COM/BLACKTARENGINEERING/RUST-WEB",
              desc: "Web framework that doesn't make you choose between speed and developer experience. Async by default. Zero-cost abstractions. Routing and middleware that just works.",
              tech: "RUST / TOKIO",
              stars: "1.8K",
              features: [
                "Blazing fast performance with zero-cost abstractions",
                "Type-safe routing and middleware",
                "Async/await support out of the box",
                "Built-in request validation",
                "Comprehensive testing utilities",
              ],
            },
            {
              name: "DATABASE MIGRATION TOOL",
              repo: "GITHUB.COM/BLACKTARENGINEERING/MIGRATE",
              desc: "Git for your database schema. One tool, multiple databases. Rollback with confidence. Team-ready from day one. PostgreSQL, MySQL, MongoDB support built-in.",
              tech: "GO / SQL",
              stars: "3.2K",
              features: [
                "Version control for database schemas",
                "Support for PostgreSQL, MySQL, and MongoDB",
                "Safe rollback functionality",
                "Team collaboration features",
                "CLI and programmatic API",
              ],
            },
          ].map((project) => (
            <article class="border-b-2 border-l-4 border-black pb-8 pl-8">
              <div class="mb-4 flex items-start justify-between">
                <h2 class="text-2xl font-bold md:text-3xl">{project.name}</h2>
                <div class="flex items-center gap-2 text-sm">
                  <Star size={16} fill="currentColor" />
                  {project.stars}
                </div>
              </div>

              <div class="mb-4">
                <a
                  href={`https://${project.repo.toLowerCase()}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 border-b border-black text-sm opacity-80 transition-opacity hover:opacity-100"
                >
                  <Github size={16} />
                  {project.repo}
                </a>
              </div>

              <p class="mb-6 text-base leading-relaxed opacity-90">
                {project.desc}
              </p>

              <div class="mb-6">
                <h3 class="mb-2 text-sm font-bold opacity-70">KEY FEATURES:</h3>
                <ul class="space-y-1 text-sm">
                  {project.features.map((feature) => (
                    <li class="flex gap-2">
                      <span class="opacity-50">•</span>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="text-xs font-bold opacity-70">{project.tech}</div>
            </article>
          ))
        }
      </div>
    </section>

    <section class="border-t-4 border-black bg-black p-8 text-white md:p-16">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 text-3xl font-bold md:text-4xl">
          ACTIVELY MAINTAINED. WELL-DOCUMENTED. CONTRIBUTIONS WELCOME.
        </h2>
        <p class="mb-8 text-lg opacity-90">
          Check out our repositories on GitHub and join the community.
        </p>
        <a
          href="https://github.com/blacktarhq"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-white px-8 py-4 font-bold text-black transition-opacity hover:opacity-90"
        >
          <Github size={24} />
          VISIT OUR GITHUB
        </a>
      </div>
    </section>

    <footer class="border-t-2 border-black p-8 md:p-16">
      <div class="mx-auto max-w-6xl text-center">
        <p class="text-sm opacity-70">
          © {currentYear} BLACKTAR ENGINEERING WORKS. ALL RIGHTS RESERVED.
        </p>
        <div class="mt-4 flex justify-center gap-4 text-xs">
          <a href="/privacy" class="transition-opacity hover:opacity-70"
            >PRIVACY POLICY</a
          >
          <a href="/terms" class="transition-opacity hover:opacity-70"
            >TERMS OF SERVICE</a
          >
        </div>
      </div>
    </footer>
  </div>
</BaseLayout>
