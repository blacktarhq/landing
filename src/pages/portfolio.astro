---
import BaseLayout from "../layouts/BaseLayout.astro";

const currentYear = new Date().getFullYear();
---

<BaseLayout title="Portfolio - BLACKTAR ENGINEERING WORKS">
  <div class="min-h-screen">
    <!-- Header -->
    <header class="border-b-2 border-black px-4 md:px-8 py-3 md:py-6">
      <a href="/" class="inline-block hover:opacity-70 transition-opacity">
        <div class="flex items-center gap-2">
          <img src="/logo.svg" alt="BlackTar" class="h-14 md:h-20 w-auto" />
          <div class="text-sm md:text-base font-bold leading-tight">
            BLACKTAR<br />
            ENGINEERING<br />
            WORKS
          </div>
        </div>
      </a>
    </header>

    <!-- Hero -->
    <section class="border-b-4 border-black p-8 md:p-16">
      <div class="max-w-6xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 border-l-8 border-black pl-6">
          SELECTED WORK
        </h1>
        <p class="text-lg md:text-xl leading-relaxed border-l-4 border-black pl-6">
          FROM ZERO TO ONE OR ONE TO MILLION. WE BUILD SYSTEMS THAT SCALE, CODE THAT LASTS, AND INFRASTRUCTURE THAT DOESN'T BREAK AT 3AM.
        </p>
      </div>
    </section>

    <!-- Projects -->
    <section class="p-8 md:p-16">
      <div class="max-w-6xl mx-auto space-y-16">
        {
          [
            {
              name: "BUILT TO SCALE",
              subtitle: "REALTIME COMMERCE PLATFORM",
              client: "RETAIL TECH STARTUP",
              desc: "Processing 100K+ daily transactions without breaking a sweat. Real-time inventory synchronization across multiple warehouses. Built to handle Black Friday traffic on a Tuesday.",
              tech: "REACT / NODE.JS / POSTGRESQL / REDIS",
              year: "2024",
              challenge: "The client needed a platform that could handle massive traffic spikes during sales events while maintaining sub-second response times.",
              solution: "Implemented a distributed caching layer with Redis, optimized database queries, and built a real-time event system using WebSockets.",
              results: [
                "99.99% uptime during peak sales periods",
                "300ms average response time under heavy load",
                "Zero data loss during migrations",
                "Successfully handled 10x traffic increase"
              ]
            },
            {
              name: "DATA THAT DRIVES DECISIONS",
              subtitle: "ENTERPRISE ANALYTICS DASHBOARD",
              client: "FINTECH COMPANY",
              desc: "Turned complex financial data into actionable insights. Real-time visualizations that executives actually understand. Custom-built components that make data beautiful and useful.",
              tech: "NEXT.JS / TYPESCRIPT / D3.JS / GRAPHQL",
              year: "2024",
              challenge: "Transform overwhelming amounts of financial data into clear, actionable insights for non-technical stakeholders.",
              solution: "Built a custom visualization library with D3.js, implemented real-time data streaming, and created an intuitive dashboard interface.",
              results: [
                "Reduced reporting time from days to minutes",
                "95% user satisfaction score",
                "Enabled data-driven decision making across all departments",
                "Processing 1M+ data points daily"
              ]
            },
            {
              name: "CONTENT AT VELOCITY",
              subtitle: "HEADLESS CMS ARCHITECTURE",
              client: "MEDIA PUBLISHER",
              desc: "One CMS, infinite destinations. AI-powered content tagging that actually works. Workflow automation that gives time back to creators. Serving millions of readers daily.",
              tech: "VUE / EXPRESS / MONGODB / ELASTICSEARCH",
              year: "2023",
              challenge: "Enable content creators to publish across multiple platforms while maintaining consistency and SEO optimization.",
              solution: "Designed a flexible headless CMS with GraphQL API, implemented AI-powered tagging, and built automated publishing workflows.",
              results: [
                "70% reduction in publishing time",
                "Serving 5M+ readers monthly",
                "30% increase in organic traffic",
                "Content now live on 10+ platforms"
              ]
            },
            {
              name: "HEALTHCARE REIMAGINED",
              subtitle: "CROSS-PLATFORM MOBILE APP",
              client: "HEALTHCARE PROVIDER",
              desc: "HIPAA-compliant from day one. Secure messaging, telehealth, and scheduling in one place. Making healthcare accessible without compromising on security.",
              tech: "REACT NATIVE / FIREBASE / AWS",
              year: "2023",
              challenge: "Create a secure, compliant mobile app that makes healthcare services easily accessible to patients.",
              solution: "Built a React Native app with end-to-end encryption, integrated video consultation, and implemented HIPAA-compliant data storage.",
              results: [
                "50K+ active users",
                "4.8/5 app store rating",
                "Zero security incidents",
                "40% increase in patient engagement"
              ]
            },
            {
              name: "BUILT FOR MILLIONS",
              subtitle: "MICROSERVICES API INFRASTRUCTURE",
              client: "SAAS PLATFORM",
              desc: "1M+ requests daily. Zero downtime deployments. Auto-scaling that actually scales. Comprehensive monitoring that catches problems before your users do.",
              tech: "GO / KUBERNETES / KAFKA / PROMETHEUS",
              year: "2023",
              challenge: "Modernize legacy monolith into scalable microservices architecture capable of handling exponential growth.",
              solution: "Migrated to containerized microservices on Kubernetes, implemented event-driven architecture with Kafka, and built comprehensive monitoring.",
              results: [
                "99.95% uptime",
                "10x improvement in deployment speed",
                "50% reduction in infrastructure costs",
                "Handling 1M+ API requests daily"
              ]
            }
          ].map((project, index) => (
            <article class="border-l-4 border-black pl-8 pb-8 border-b-2 border-black">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <div class="text-3xl font-bold opacity-30 mb-2">0{index + 1}</div>
                  <h2 class="text-2xl md:text-3xl font-bold mb-2">{project.name}</h2>
                  <p class="text-base opacity-80 mb-1">{project.subtitle}</p>
                  <p class="text-sm opacity-70 border-b border-black inline-block pb-1">{project.client}</p>
                </div>
                <div class="text-sm opacity-70">{project.year}</div>
              </div>

              <p class="text-base leading-relaxed mb-6 opacity-90">
                {project.desc}
              </p>

              <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div>
                  <h3 class="text-sm font-bold mb-2 border-b border-black inline-block pb-1">THE CHALLENGE</h3>
                  <p class="text-sm leading-relaxed opacity-90">{project.challenge}</p>
                </div>
                <div>
                  <h3 class="text-sm font-bold mb-2 border-b border-black inline-block pb-1">OUR SOLUTION</h3>
                  <p class="text-sm leading-relaxed opacity-90">{project.solution}</p>
                </div>
              </div>

              <div class="mb-6">
                <h3 class="text-sm font-bold mb-2 border-b border-black inline-block pb-1">RESULTS</h3>
                <ul class="grid md:grid-cols-2 gap-2 text-sm">
                  {project.results.map((result) => (
                    <li class="flex gap-2">
                      <span class="opacity-50">•</span>
                      <span>{result}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="text-xs opacity-70 font-bold">
                {project.tech}
              </div>
            </article>
          ))
        }
      </div>
    </section>

    <!-- CTA -->
    <section class="bg-black text-white p-8 md:p-16 border-t-4 border-black">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-5xl font-bold mb-6 border-l-8 border-white pl-6">
          LET'S BUILD SOMETHING THAT SHIPS
        </h2>
        <p class="text-lg mb-8 opacity-90 border-l-4 border-white pl-6">
          READY TO MOVE FAST AND BUILD THINGS? LET'S TALK.
        </p>
        <a
          href="/#contact"
          class="inline-block bg-white text-black px-8 py-4 font-bold hover:opacity-90 transition-opacity border-l-4 border-white"
        >
          GET IN TOUCH
        </a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="border-t-2 border-black p-8 md:p-16">
      <div class="max-w-6xl mx-auto text-center">
        <p class="text-sm opacity-70">
          © {currentYear} BLACKTAR ENGINEERING WORKS. ALL RIGHTS RESERVED.
        </p>
        <div class="mt-4 flex gap-4 justify-center text-xs">
          <a href="/privacy" class="hover:opacity-70 transition-opacity">PRIVACY POLICY</a>
          <a href="/terms" class="hover:opacity-70 transition-opacity">TERMS OF SERVICE</a>
        </div>
      </div>
    </footer>
  </div>
</BaseLayout>
